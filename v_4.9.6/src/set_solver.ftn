***s/r set_solver
*
      subroutine set_solver
      implicit none
*
#include "lcldim.cdk"
#include "gcrk.cdk"
#include "transpose.cdk"
#include "solver.cdk"
#include "nbcpu.cdk"
#include "partopo.cdk"
*---------------------------------------------------------------------
*
      gcrk_l    = .false.
      adi_pre   = 0.05d0
      nx        = ldni-east
      ny        = ldnj-north
      nz        = nk_solv
      nn        = nx*ny*nz
      nksp      = 10
      if (gcrk_l) nksp = 3
      im        = min(nksp,maxite)
      if (.not.gcrk_l) nksp = im
      iout   = 0
      if ((diagres).and.(myproc.eq.0)) iout = 6
*
      niterj    = 4
      niterj    = min(max(1,niterj),min(hx+1,hy+1))
      nthreads  = npeOpenMP
      dim_s     = (nx+2*(niterj-1))*(ny+2*(niterj-1))
      dim_czz   = dim_s*nz*3
      eps       = hsolvpre
*
      lwork = nx*ny
      lfft  = 2*nx + INT(LOG (REAL(nx))) + 4 +
     $        2*ny + INT(LOG (REAL(ny))) + 4
*
*---------------------------------------------------------------------
      return
      end





