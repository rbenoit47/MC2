@copyright (C) 2001  MSC-RPN COMM  %%%MC2%%%
***s/r nes2s -- Horizontal nesting on 2 faces
*
      subroutine nes2s (fn,fd,lminx,lmaxx,lminy,lmaxy,lnk,
     $                                  is,js,ndavx,ndavy)
      implicit none
*
      integer lminx,lmaxx,lminy,lmaxy,lnk,is,js,ndavx,ndavy
      real fn(lminx:lmaxx,lminy:lmaxy,lnk),
     $     fd(lminx:lmaxx,lminy:lmaxy,lnk)
*
*AUTHOR
*
*REVISION
*
*LANGUAGE   Fortran 77
*
*OBJECT (nesajr)
*     This subroutine blends the field "fn", updated by a dynamic
*     timestep, with the nesting field "fd". Nesting is performed
*     according to equation (4.1.1) on ndavx+1 points along the x-axis 
*     and on ndavy+1 points along the y-axis. The attenuation function
*     "p" is as described by equations 4.1.2, 4.1.3 abd 4.1.4.
*
*FILES
*
*ARGUMENTS
*    NAMES     I/O  TYPE  A/S        DESCRIPTION
*
*    fn         O     R    A    field to be nested
*    fd         I     R    A    nesting field
*    nis        I     I    S    horizontal dimension
*    njs        I     I    S    horizontal dimension
*    nks        I     I    S    vertical   dimension
*    ni         I     I    S    horizontal computational domain
*    nj         I     I    S    horizontal computational domain
*    nk         I     I    S    vertical   computational domain
*    is         I     I    S    staggering parameter along x
*    js         I     I    S    staggering parameter along y
*    ks         I     I    S    staggering parameter along z
*    ndavx      I     I    S    thichness of sponge layer along x
*    ndavy      I     I    S    thichness of sponge layer along y
*
*IMPLICIT
#include "lcldim.cdk"
#include "nestpnt.cdk"
*
*MODULES
*
**
      integer i,j,k,nit,njt,il,ih,jl,jh
      real*8 p,one
      parameter (one = 1.0d0)
*----------------------------------------------------------------------
*100
*     * ndavx et ndavy: nombre de points de grille dans la bande de 
*     *                 pilotage (eponge) excluant les frontieres.
*
      nit  = ldni-is
      njt  = ldnj-js
*
      il   = 1   + ndavx
      ih   = nit - ndavx
      jl   = 1   + ndavy
      jh   = njt - ndavy
*
* If we are in a corner of the global domain ...
*
      if (((north+west).eq.2).or.((north+east).eq.2).or.
     $    ((south+west).eq.2).or.((south+east).eq.2)) then
*
      if ((north+west).eq.2) then
      do k=1,lnk
*west
         do i=1,il-1
         do j=1,jh
            p = wh_w(i)
            fn(i,j,k)= (one-p)*fn(i,j,k)+p*fd(i,j,k)
         end do
         end do
*north
         do j=jh+1,njt
         do i=il,ldni
            p = wh_n(j+js)
            fn(i,j,k)= (one-p)*fn(i,j,k)+p*fd(i,j,k)
         end do
         end do
         do j=njt+1,ldnj
         do i=1,ldni
            fn(i,j,k) = fd(i,j,k)
         end do
         end do
*north-west
         do i=1,il-1
         do j=jh+1,njt
            p = wh_nw(i,j+js)
            fn(i,j,k)= (one-p)*fn(i,j,k)+p*fd(i,j,k)
            end do
         end do
      end do
      endif
*
      if ((north+east).eq.2) then
      do k=1,lnk
*east
         do i=ih+1,nit
         do j=1,jh
            p = wh_e(i+is)
            fn(i,j,k)= (one-p)*fn(i,j,k)+p*fd(i,j,k)
         end do
         end do
         do i=nit+1,ldni
         do j=1,ldnj
            fn(i,j,k) = fd(i,j,k)
         end do
         end do
*north
         do j=jh+1,njt
         do i=1,ih
            p = wh_n(j+js)
            fn(i,j,k)= (one-p)*fn(i,j,k)+p*fd(i,j,k)
         end do
         end do
         do j=njt+1,ldnj
         do i=1,ldni
            fn(i,j,k) = fd(i,j,k)
         end do
         end do
*north-east
         do i=ih+1,nit
         do j=jh+1,njt
            p = wh_ne(i+is,j+js)
            fn(i,j,k)= (one-p)*fn(i,j,k)+p*fd(i,j,k)
         end do
         end do
      end do
      endif
*
      if ((south+west).eq.2) then
      do k=1,lnk
*west
         do i=1,il-1
         do j=jl,ldnj
            p = wh_w(i)
            fn(i,j,k)= (one-p)*fn(i,j,k)+p*fd(i,j,k)
         end do
         end do
*south
         do j=1,jl-1
         do i=il,ldni
            p = wh_s(j)
            fn(i,j,k)= (one-p)*fn(i,j,k)+p*fd(i,j,k)
         end do
         end do
*south-west
         do i=1,il-1
         do j=1,jl-1
            p = wh_sw(i,j)
            fn(i,j,k)= (one-p)*fn(i,j,k)+p*fd(i,j,k)
         end do
         end do
      end do
      endif
*
      if ((south+east).eq.2) then
      do k=1,lnk
*east
         do i=ih+1,nit
         do j=jl,ldnj
            p = wh_e(i+is)
            fn(i,j,k)= (one-p)*fn(i,j,k)+p*fd(i,j,k)
         end do
         end do
         do i=nit+1,ldni
         do j=1,ldnj
            fn(i,j,k) = fd(i,j,k)
         end do
         end do
*south
         do j=1,jl-1
         do i=1,ih
            p = wh_s(j)
            fn(i,j,k)= (one-p)*fn(i,j,k)+p*fd(i,j,k)
         end do
         end do
*south-east
         do i=ih+1,nit
         do j=1,jl-1
            p = wh_se(i+is,j)
            fn(i,j,k)= (one-p)*fn(i,j,k)+p*fd(i,j,k)
         end do
         end do
      end do
      endif
*
      else
*
* If we are NOT in a corner of the global domain ...
*
      if (north.gt.0) then
      do k=1,lnk
         do j=jh+1,njt
         do i=1,ldni
            p = wh_n(j+js)
            fn(i,j,k)= (one-p)*fn(i,j,k)+p*fd(i,j,k)
         end do
         end do
         do j=njt+1,ldnj
         do i=1,ldni
            fn(i,j,k) = fd(i,j,k)
         end do
         end do
      end do
      endif
      if (south.gt.0) then
      do k=1,lnk
         do j=1,jl-1
         do i=1,ldni
            p = wh_s(j)
            fn(i,j,k)= (one-p)*fn(i,j,k)+p*fd(i,j,k)
         end do
         end do
      end do
      endif
      if (west.gt.0) then
      do k=1,lnk
         do i=1,il-1
         do j=1,ldnj
            p = wh_w(i)
            fn(i,j,k)= (one-p)*fn(i,j,k)+p*fd(i,j,k)
         end do
         end do
      end do
      endif
      if (east.gt.0) then
      do k=1,lnk
         do i=ih+1,nit
         do j=1,ldnj
            p = wh_e(i+is)
            fn(i,j,k)= (one-p)*fn(i,j,k)+p*fd(i,j,k)
         end do
         end do
         do i=nit+1,ldni
         do j=1,ldnj
            fn(i,j,k) = fd(i,j,k)
         end do
         end do
      end do
      endif
*
      endif
*
*----------------------------------------------------------------------
*
      return
      end



@
